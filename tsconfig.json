{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Entorno
    "target": "ES2020",
    "module": "commonjs",          
    "lib": ["es2020"],
    "types": ["node"],             

    // Otros outputs
    "sourceMap": true,
    "declaration": true,

    // Type-checking estricto
    "strict": true,
    "esModuleInterop": true,       
    "skipLibCheck": true,

    // Limpieza
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
